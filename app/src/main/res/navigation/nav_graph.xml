<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/moviesFragment">

    <fragment
        android:id="@+id/moviesFragment"
        android:name="com.oluwaseyiayodele.carbonandroid.ui.movies.MoviesFragment"
        android:label="Carbon Movies"
        tools:layout="@layout/movies_fragment">
        <action
            android:id="@+id/action_moviesFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.oluwaseyiayodele.carbonandroid.ui.moviedetails.MovieDetailsFragment"
        android:label="Carbon Movie Details"
        tools:layout="@layout/movie_details_fragment">
        <argument
            android:name="movie"
            app:argType="com.oluwaseyiayodele.carbonandroid.model.MoviePresentation" />
    </fragment>
</navigation>
